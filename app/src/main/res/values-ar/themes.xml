<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ProvizitScheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/a_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowContentTransitions">false</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    fonts-->
    <style name="medium_font">
        <item name="android:fontFamily">@font/arbfonts_dinnextttlrabic_medium</item>
    </style>

    <style name="regular_font">
        <item name="android:fontFamily">@font/arbfonts_dinnextttlrabic_regular</item>
    </style>

    <style name="bold_font">
        <item name="android:fontFamily">@font/arbfont_dinnext_bold</item>
    </style>

    <style name="light_font">
        <item name="android:fontFamily">@font/arbfonts_dinnextttlrabic_light</item>
    </style>
</resources>
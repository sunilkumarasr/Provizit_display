<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_trd"
                    android:layout_width="650dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:clipToPadding="true"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="3dp"
                    app:cardMaxElevation="@dimen/_3sdp">

                    <RelativeLayout
                        android:id="@+id/m_time_trd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/nextmeeting">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/Confidential_trd"
                                android:fontFamily="@font/arbfont_dinnext_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Confidential"
                                android:textColor="@color/app_tcolor"
                                android:textSize="@dimen/_17sdp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/meetinglayout_trd"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginHorizontal="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@drawable/bottom_radius_border"
                                android:orientation="vertical"
                                android:paddingVertical="@dimen/_7sdp">

                                <LinearLayout
                                    android:id="@+id/l1_trd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/subject_trd"
                                        android:fontFamily="@font/arbfonts_dinnextttlrabic_medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:text="Introduction of Provizit Visitor Management System"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="35dp"
                                                android:layout_height="35dp"
                                                android:src="@drawable/host" />

                                            <TextView
                                                android:id="@+id/hostName_trd"
                                                android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_7sdp"
                                                android:text="Murali Krishna Kondimi"
                                                android:textColor="@android:color/black"
                                                android:textSize="@dimen/_10ssp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/clock" />

                                            <TextView
                                                android:id="@+id/time_trd"
                                                android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_7sdp"
                                                android:text="Murali Krishna Kondimi"
                                                android:textColor="@android:color/black"
                                                android:textSize="@dimen/_10sdp" />
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/m_timeText"
                                android:fontFamily="@font/arbfont_dinnext_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_21ssp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/m_Status"
                            android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text=" "
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:fontFamily="@font/arbfont_dinnext_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Next"
                android:textColor="@color/app_tcolor"
                android:textSize="@dimen/_11sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/meetingsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.7"
                tools:itemCount="2"
                tools:listitem="@layout/training_room_item" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
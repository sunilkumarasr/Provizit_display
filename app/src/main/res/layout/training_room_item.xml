<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    app:cardCornerRadius="9dp"
    app:cardElevation="@dimen/_3sdp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/confidential_text"
            android:fontFamily="@font/arbfont_dinnext_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Confidential"
            android:textColor="@color/app_tcolor"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_start"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:45 PM"
                    android:textColor="@color/app_tcolor"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:fontFamily="@font/roboto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="-"
                    android:textColor="@color/app_tcolor"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/m_end"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="04:45 PM"
                    android:textColor="@color/app_tcolor"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/subject"
                android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Introduction of Provizit Visitor Management System"
                android:textColor="@color/app_tcolor"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By"
                android:textColor="@color/black"
                android:textSize="@dimen/_7ssp" />

            <TextView
                android:id="@+id/hostName"
                android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Murali Krishna Kondimi"
                android:singleLine="true"
                android:textColor="@color/app_tcolor"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:fontFamily="@font/arbfonts_dinnextttlrabic_medium"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rounded_background"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rounded_background"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rounded_background"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8ssp" />

            <TextView
                android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

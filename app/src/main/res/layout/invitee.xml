<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingRight="8dp"
        android:fontFamily="@font/arbfonts_dinnextttlrabic_medium"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/app_tcolor"/>
    <com.provizit.provizitscheduler.CircleImageView
        android:id="@+id/status_img"
        android:layout_toRightOf="@id/lbl_name"
        android:layout_marginLeft="5dp"
        android:layout_width="24dp"
        android:visibility="gone"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_weight="0"
        android:src="@drawable/ic_group_84"
        app:civ_border_color="#F2F3F7"
        app:civ_border_width="1dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.provizit.provizitscheduler.CircleImageView
        android:id="@+id/emp_img"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_width="24dp"
        android:layout_alignParentLeft="true"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_weight="0"
        android:src="@drawable/ic_user"
        app:civ_border_color="#F2F3F7"
        app:civ_border_width="1dp" />

    <TextView
        android:layout_toRightOf="@id/emp_img"
        android:id="@+id/lbl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:textSize="@dimen/_9ssp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp"
        android:text="Medium Text"
        android:textColor="#149D3A"
        android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"/>

</RelativeLayout>
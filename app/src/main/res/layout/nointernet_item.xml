<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/_290sdp"
    android:layout_height="@dimen/_159sdp"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:clipToPadding="true"
         app:cardElevation="3dp"
         app:cardMaxElevation="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:src="@drawable/ic_globe1"></ImageView>

        <TextView
            android:id="@+id/meetingRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Interrupted"
             android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/arbfont_dinnext_bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/app_tcolor"/>
        <TextView
             android:id="@+id/presentTime"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your internet connection"
            android:fontFamily="@font/arbfonts_dinnextttlrabic_regular"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/app_tcolor"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>